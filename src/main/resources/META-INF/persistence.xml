<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <!-- Persistence Unit cho MariaDB -->
  <persistence-unit name="default">
    <class>Model.CaTruc</class>
    <class>Model.NhanVien</class>
    <class>Model.TaiKhoan</class>
    <class>Model.Quyen</class>
    <class>Model.NhomQuyen</class>
    <class>Model.HoaDon</class>
    <class>Model.KhachHang</class>
    <class>Model.Ve</class>
    <class>Model.Ghe</class>
    <class>Model.Toa</class>
    <class>Model.Tau</class>
    <class>Model.NhaGa</class>
    <class>Model.LichTrinh</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/trainsystem"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="truc2004"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
