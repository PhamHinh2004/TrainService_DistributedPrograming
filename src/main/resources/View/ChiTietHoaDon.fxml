<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="450.0" prefWidth="650.0" spacing="15.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ChiTietHoaDonController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Chi Tiết Hóa Đơn">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <children>
                <Label text="Mã Hóa Đơn:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="maHdLabel" text="[Mã Hóa Đơn]" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Ngày Lập:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="ngayLapLabel" text="[Ngày Lập]" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="Tên Khách Hàng:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="tenKhLabel" text="[Tên Khách Hàng]" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Trạng Thái:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label fx:id="trangThaiLabel" text="[Trạng Thái]" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Tổng Tiền:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="tongTienLabel" text="[Tổng Tiền]" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Nhân Viên:" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Label fx:id="nhanVienLabel" text="[Nhân Viên]" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <Label text="Danh Sách Vé Chi Tiết:" style="-fx-font-weight: bold;">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets top="15.0" bottom="5.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="veTable" prefHeight="250.0" prefWidth="600.0" VBox.vgrow="ALWAYS" style="-fx-background-color: #f0f0f0;">
            <columns>
                <TableColumn fx:id="sttVeColumn" prefWidth="50.0" text="STT" />
                <TableColumn fx:id="maVeColumn" prefWidth="100.0" text="Mã Vé" />
                <TableColumn fx:id="loaiVeColumn" prefWidth="100.0" text="Loại Vé" />
                <TableColumn fx:id="maGheColumn" prefWidth="100.0" text="Mã Ghế" />
                <TableColumn fx:id="gaDiColumn" prefWidth="120.0" text="Ga Đi" />
                <TableColumn fx:id="gaDenColumn" prefWidth="120.0" text="Ga Đến" />
                <TableColumn fx:id="giaVeColumn" prefWidth="100.0" text="Giá Vé" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="Không có vé nào trong hóa đơn này." />
            </placeholder>
        </TableView>
    </children>
</VBox>